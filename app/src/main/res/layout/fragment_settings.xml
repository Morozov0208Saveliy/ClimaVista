<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SettingsFragment">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_svg"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Temperature Unit Label -->
    <TextView
        android:id="@+id/unitLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Temperature Unit"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton" />

    <!-- Temperature Unit Switch -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/unitSwitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Fahrenheit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/unitLabel" />

    <!-- Update Frequency Label -->
    <TextView
        android:id="@+id/updateFrequencyLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Update Frequency"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/unitSwitch" />

    <!-- SeekBar for Update Frequency -->
    <SeekBar
        android:id="@+id/updateFrequencySeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="24"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/updateFrequencyLabel" />

    <!-- Update Frequency Value -->
    <TextView
        android:id="@+id/frequencyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 hour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/updateFrequencySeekBar"
        android:layout_marginStart="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
