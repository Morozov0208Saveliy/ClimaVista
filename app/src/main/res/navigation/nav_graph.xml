<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/weatherDetailsFragment">

    <!-- WeatherDetailsFragment -->
    <fragment
        android:id="@+id/weatherDetailsFragment"
        android:name="com.example.climavista.activity.WeatherDetailsFragment"
        android:label="Weather Details"
        tools:layout="@layout/fragment_weather_details">
        <action
            android:id="@+id/action_weatherDetailsFragment_to_cityListFragment"
            app:destination="@id/cityListFragment" />
        <argument
            android:name="lat"
            app:argType="float"
            android:defaultValue="0.0" />
        <argument
            android:name="lon"
            app:argType="float"
            android:defaultValue="0.0" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="Unknown City" />
        <action
            android:id="@+id/action_weatherDetailsFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <!-- CityListFragment -->
    <fragment
        android:id="@+id/cityListFragment"
        android:name="com.example.climavista.activity.CityListFragment"
        android:label="City List"
        tools:layout="@layout/fragment_city_list">
        <!-- Переход на экран WeatherDetailsFragment -->
        <action
            android:id="@+id/action_cityListFragment_to_weatherDetailsFragment"
            app:destination="@id/weatherDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.climavista.activity.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_weatherDetailsFragment"
            app:destination="@id/weatherDetailsFragment" />
    </fragment>

</navigation>