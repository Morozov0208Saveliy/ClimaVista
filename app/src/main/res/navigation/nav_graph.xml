<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/weatherDetailsFragment">

    <!-- WeatherDetailsFragment -->
    <fragment
        android:id="@+id/weatherDetailsFragment"
        android:name="com.example.climavista.ui.WeatherDetailsFragment"
        android:label="Weather Details"
        tools:layout="@layout/fragment_weather_details">
        <action
            android:id="@+id/action_weatherDetailsFragment_to_cityListFragment"
            app:destination="@id/cityListFragment" />
        <action
            android:id="@+id/action_weatherDetailsFragment_to_weatherAlertFragment"
            app:destination="@id/weatherAlertFragment" />
        <argument
            android:name="lat"
            app:argType="float"
            android:defaultValue="0.0" />
        <argument
            android:name="lon"
            app:argType="float"
            android:defaultValue="0.0" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="Benidorm" />
    </fragment>

    <!-- CityListFragment -->
    <fragment
        android:id="@+id/cityListFragment"
        android:name="com.example.climavista.ui.CityListFragment"
        android:label="City List"
        tools:layout="@layout/fragment_city_list">
        <action
            android:id="@+id/action_cityListFragment_to_weatherDetailsFragment"
            app:destination="@id/weatherDetailsFragment" />
    </fragment>

    <!-- WeatherAlertFragment -->
    <fragment
        android:id="@+id/weatherAlertFragment"
        android:name="com.example.climavista.ui.WeatherAlertFragment"
        android:label="Weather Alerts"
        tools:layout="@layout/fragment_weather_alert">
        <argument
            android:name="currentTemp"
            app:argType="float"
            android:defaultValue="0.0" />
    </fragment>

</navigation>
